html
  head
    title Scraped Headless Browser Resources
    block head
      script(src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous")
      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css', integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l', crossorigin='anonymous')

  body
      .container
        br
        br
        .row
          .col-12.col-md-4
            h4 Comparador de Precios
        .row
          .col-12.col-md-3
            form(method='post', action='/evaluar')
              .form-row
                .col
                  input.form-control(
                    type='text'
                    name='search'
                    id='search'
                    placeholder='Producto'
                  )
                .col
                  input.btn.btn-primary.btn-sm(type='submit', name='Evaluar', value='Evaluar')
        .row
          .col
            table.table.table-bordered
              thead.thead-dark
                tr
                  th(colspan='2')
                    Precios 'Justo'
                tr
                  th Articulo
                  th Precio
              tbody
              for article in data.articles
                tr
                  td=`${article.tittle}`
                  td=`${article.price}`
          .col
            table.table.table-bordered
              thead.thead-dark
                tr
                  th(colspan='2')
                    Precios 'Central en Linea'
                tr
                  th Articulo
                  th Precio
              tbody
              for article in data.articlesCentral
                tr
                  td=`${article.tittle}`
                  td=`${article.price}`
          .col
            table.table.table-bordered
              thead.thead-dark
                tr
                  th(colspan='2')
                    Precios 'Chedraui'
                tr
                  th Articulo
                  th Precio
              tbody
              for article in data.articlesChedraui
                tr
                  td=`${article.tittle}`
                  td=`${article.price}`
          .col
            table.table.table-bordered
              thead.thead-dark
                tr
                  th(colspan='2')
                    Precios 'Superama'
                tr
                  th Articulo
                  th Precio
              tbody
              for article in data.articlesSuperama
                tr
                  td=`${article.tittle}`
                  td=`${article.price}`





